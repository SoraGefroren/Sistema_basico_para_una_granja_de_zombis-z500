<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invocar zombies"
            android:id="@+id/btn_Actualizar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barrer"
            android:id="@+id/btn_Barrer"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descubrir"
            android:id="@+id/btn_Descrubrir"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btn_Barrer" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_ListaZombies"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/btn_Actualizar" />

    </RelativeLayout>

</LinearLayout>